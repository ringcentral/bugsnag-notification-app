{
    "type": "AdaptiveCard",
    "fallbackText": "Hi, I'm Bugsnag Bot.",
    "body": [
        {
            "type": "TextBlock",
            "weight": "Bolder",
            "text": "Hi team!"
        },
        {
            "type": "TextBlock",
            "text": "I am **Bugsnag Bot**. To connect Bugsnag with this conversaton, please click **Subscribe** button.",
            "wrap": true
        },
        {
            "type": "TextBlock",
            "text": "You can also **mention** me with following commands to execute related actions. \n* help\n* subscribe\n* authorize\n* unauthorize",
            "wrap": true
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": "14px",
                                    "items": [
                                        {
                                            "type": "Image",
                                            "url": "https://raw.githubusercontent.com/ringcentral/bugsnag-notification-app/main/icon/feedback.png",
                                            "height": "12px"
                                        }
                                    ],
                                    "verticalContentAlignment": "Center"
                                },
                                {
                                    "type": "Column",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "[Feedback](https://github.com/ringcentral/bugsnag-notification-app/issues/new)",
                                            "wrap": true,
                                            "size": "Small"
                                        }
                                    ],
                                    "width": "stretch",
                                    "verticalContentAlignment": "Center"
                                }
                            ]
                        }
                    ],
                    "verticalContentAlignment": "Bottom"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Container",
                            "items": [
                                {
                                    "type": "ActionSet",
                                    "id": "submitActions",
                                    "actions": [
                                        {
                                            "type": "Action.Submit",
                                            "title": "Subscribe",
                                            "data": {
                                                "messageType": "Bot",
                                                "action": "subscribe",
                                                "botId": "${botId}"
                                            },
                                            "style": "positive"
                                        }
                                    ]
                                }
                            ]
                        }
                    ],
                    "width": "auto",
                    "verticalContentAlignment": "Bottom"
                }
            ],
            "horizontalAlignment": "Center"
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3"
}