{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "${errorIcon}",
                                    "height": "24px"
                                }
                            ],
                            "verticalContentAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${subject}",
                                    "wrap": true
                                }
                            ],
                            "verticalContentAlignment": "Center",
                            "spacing": "Small"
                        }
                    ]
                },
                {
                    "type": "TextBlock",
                    "text": "${message}",
                    "wrap": true
                },
                {
                    "type": "TextBlock",
                    "text": "${stackTrace}",
                    "spacing": "Small",
                    "wrap": true
                },
                {
                    "type": "TextBlock",
                    "wrap": true,
                    "text": "${moreStackTrace}",
                    "isVisible": false,
                    "id": "moreStackTrace",
                    "spacing": "None"
                },
                {
                    "type": "Container",
                    "id": "shoreMoreButtons",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Show more",
                            "wrap": true,
                            "color": "Accent",
                            "id": "showMoreText"
                        },
                        {
                            "type": "TextBlock",
                            "text": "Show less",
                            "wrap": true,
                            "color": "Accent",
                            "id": "showLessText",
                            "isVisible": false
                        }
                    ],
                    "selectAction": {
                        "type": "Action.ToggleVisibility",
                        "targetElements": [
                            "moreStackTrace",
                            "showMoreText",
                            "showLessText"
                        ],
                        "title": "Show more"
                    },
                    "isVisible": false
                },
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Status",
                                    "wrap": true,
                                    "size": "Small"
                                },
                                {
                                    "type": "ColumnSet",
                                    "columns": [
                                        {
                                            "type": "Column",
                                            "width": "auto",
                                            "items": [
                                                {
                                                    "type": "Image",
                                                    "url": "${statusIcon}",
                                                    "height": "16px"
                                                }
                                            ],
                                            "verticalContentAlignment": "Center"
                                        },
                                        {
                                            "type": "Column",
                                            "width": "stretch",
                                            "items": [
                                                {
                                                    "type": "TextBlock",
                                                    "text": "${status}",
                                                    "wrap": true
                                                }
                                            ],
                                            "spacing": "Small",
                                            "verticalContentAlignment": "Center"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Severity",
                                    "wrap": true,
                                    "size": "Small"
                                },
                                {
                                    "type": "ColumnSet",
                                    "columns": [
                                        {
                                            "type": "Column",
                                            "width": "auto",
                                            "items": [
                                                {
                                                    "type": "Image",
                                                    "url": "${severityIcon}",
                                                    "height": "16px"
                                                }
                                            ],
                                            "verticalContentAlignment": "Center"
                                        },
                                        {
                                            "type": "Column",
                                            "width": "stretch",
                                            "items": [
                                                {
                                                    "type": "TextBlock",
                                                    "text": "${severity}",
                                                    "wrap": true
                                                }
                                            ],
                                            "spacing": "Small",
                                            "verticalContentAlignment": "Center"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "ActionSet",
                    "id": "actions",
                    "actions": [
                        {
                            "type": "Action.ShowCard",
                            "title": "Mark as fixed",
                            "card": {
                                "type": "AdaptiveCard",
                                "version": "1.3",
                                "body": [
                                    {
                                        "type": "Input.Text",
                                        "id": "fixComment",
                                        "placeholder": "Add a comment (optional)",
                                        "maxLength": 500,
                                        "isMultiline": true,
                                        "isVisible": true
                                    }
                                ],
                                "actions": [
                                    {
                                        "type": "Action.Submit",
                                        "title": "Mark as fixed",
                                        "data": {
                                            "action": "fix",
                                            "webhookId": "${webhookId}",
                                            "projectId": "${projectId}",
                                            "errorId": "${errorId}"
                                        },
                                        "style": "positive"
                                    }
                                ]
                              }
                        },
                        {
                            "type": "Action.ShowCard",
                            "title": "Snooze",
                            "card": {
                                "type": "AdaptiveCard",
                                "version": "1.3",
                                "body": [
                                    {
                                        "type": "Input.ChoiceSet",
                                        "id": "snoozeType",
                                        "style": "compact",
                                        "value": "1hr",
                                        "choices": [
                                            {
                                                "title": "Snooze 1 hour",
                                                "value": "1hr"
                                            },
                                            {
                                                "title": "Snooze 6 hours",
                                                "value": "6hr"
                                            },
                                            {
                                                "title": "Snooze 1 day",
                                                "value": "1d"
                                            }
                                        ]
                                    },
                                    {
                                        "type": "Input.Text",
                                        "id": "snoozeComment",
                                        "placeholder": "Add a comment (optional)",
                                        "maxLength": 500,
                                        "isMultiline": true
                                    }
                                ],
                                "actions": [
                                    {
                                        "type": "Action.Submit",
                                        "title": "Snooze",
                                        "data": {
                                            "action": "snooze",
                                            "webhookId": "${webhookId}",
                                            "projectId": "${projectId}",
                                            "errorId": "${errorId}"
                                        },
                                        "style": "positive"
                                    }
                                ]
                              }
                        },
                        {
                            "type": "Action.ShowCard",
                            "title": "Ignore",
                            "card": {
                                "type": "AdaptiveCard",
                                "version": "1.3",
                                "body": [
                                    {
                                        "type": "Input.Text",
                                        "id": "ignoreComment",
                                        "placeholder": "Add a comment (optional)",
                                        "maxLength": 500,
                                        "isMultiline": true,
                                        "isVisible": true
                                    }
                                ],
                                "actions": [
                                    {
                                        "type": "Action.Submit",
                                        "title": "Ignore",
                                        "data": {
                                            "action": "ignore",
                                            "webhookId": "${webhookId}",
                                            "projectId": "${projectId}",
                                            "errorId": "${errorId}"
                                        },
                                        "style": "positive"
                                    }
                                ]
                              }
                        }
                    ],
                    "isVisible": true
                }
            ]
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "14px",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://raw.githubusercontent.com/ringcentral/bugsnag-notification-app/main/icon/feedback.png",
                            "height": "12px"
                        }
                    ],
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "[Feedback](https://github.com/ringcentral/bugsnag-notification-app/issues/new)",
                            "wrap": true,
                            "size": "Small"
                        }
                    ],
                    "width": "stretch",
                    "verticalContentAlignment": "Center"
                }
            ]
        }
    ]
}